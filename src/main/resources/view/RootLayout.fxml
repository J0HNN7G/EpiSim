            <Label alignment="CENTER" text="2020 Alexandra Purcarea &amp; Jonathan Gustafsson Frennert" textFill="WHITE">
               <HBox.margin>
                  <Insets bottom="5.0" />
               </HBox.margin>
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </bottom>
   <top>
      <GridPane styleClass="linear-grad-to-right" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" />
          <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <ImageView fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true" styleClass="icon" />
                  <Label text="Simple Epidemic Simulator" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
