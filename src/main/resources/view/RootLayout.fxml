            <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets right="60.0" />
               </GridPane.margin>
               <children>
                  <JFXButton alignment="CENTER" buttonType="RAISED" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="90.0" text="Simulator" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <styleClass>
                        <String fx:value="btn-constant" />
                        <String fx:value="btn-menu" />
                     </styleClass>
                  </JFXButton>
                  <JFXButton alignment="CENTER" buttonType="RAISED" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="90.0" text="About" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <styleClass>
                        <String fx:value="btn-constant" />
                        <String fx:value="btn-menu" />
                     </styleClass>
                  </JFXButton>
               </children>
            </HBox>
         </children>
      </GridPane>
   </top>
